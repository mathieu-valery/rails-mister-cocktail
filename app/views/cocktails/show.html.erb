<h1><%= @cocktail.name %></h1>


<div class = "details">
  <div class ="dose-list">
    <ul>
      <% @doses.each do |dose| %>
      <li><%= dose[:description] %></li>
      <% end %>
    </ul>
  </div>

  <div class ="ingredient-list">
    <ul>
      <% @ingredients.each do |ingredient| %>
      <li><%= ingredient[:name] %></li>
      <% end %>
    </ul>
  </div>

 <div class ="delete-link">
    <ul>
      <% @doses.each do |dose| %>
      <li><%= link_to "Remove",
                  dose_path(dose),
                  method: :delete,
                  data: { confirm: "Are you sure?" }%></li>
      <% end %>
    </ul>
  </div>

</div>

<%= link_to "Add an ingredient", new_cocktail_dose_path(@cocktail) %>
<br>
<%= link_to "Back to list", cocktails_path %>
